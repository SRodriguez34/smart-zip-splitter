{
  "name": "smart-zip-splitter",
  "version": "1.0.0",
  "description": "Smart tool for splitting and processing ZIP files",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3004",
    "dev:auto": "next dev",
    "dev:clean": "rm -rf .next && npm run dev",
    "dev:3000": "next dev -p 3000",
    "dev:3005": "next dev -p 3005",
    "build": "npm run icons:generate && next build",
    "build:prod": "npm run icons:generate && npm run build && npm run analyze",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "icons:generate": "node scripts/generate-icons.js",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "npm run analyze",
    "lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "lighthouse:ci": "lhci autorun",
    "pwa:test": "npm run build && npm run start",
    "sw:update": "workbox generateSW workbox-config.js"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "client-zip": "^2.4.4",
    "clsx": "^2.1.1",
    "file-saver": "^2.0.5",
    "framer-motion": "^10.16.16",
    "jszip": "^3.10.1",
    "lucide-react": "^0.454.0",
    "next": "^15.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.3",
    "tailwind-merge": "^2.5.4",
    "typescript": "^5.6.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.0.0",
    "playwright": "^1.49.0",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "sharp": "^0.33.0",
    "tailwindcss": "^3.4.14",
    "webpack-bundle-analyzer": "^4.10.0",
    "workbox-cli": "^7.0.0"
  },
  "keywords": [
    "zip",
    "splitter",
    "file-processing",
    "nextjs",
    "react"
  ],
  "author": "",
  "license": "MIT"
}
