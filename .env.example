# Environment Variables for Smart ZIP Splitter PWA
# Copy this file to .env.local and fill in the values

# ============================================================================
# GOOGLE DRIVE INTEGRATION (REQUIRED for files > 100MB)
# ============================================================================

# Google API Configuration
# Get these from Google Cloud Console (https://console.cloud.google.com/)
# 1. Create a new project or select existing
# 2. Enable Google Drive API and Google Sheets API
# 3. Create OAuth 2.0 credentials (Web application)
# 4. Add authorized redirect URIs:
#    - http://localhost:3000/api/auth/google/callback (development)
#    - https://yourdomain.com/api/auth/google/callback (production)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com

# OAuth Configuration
# The base URL where your app is hosted (for OAuth redirects)
NEXTAUTH_URL=http://localhost:3000

# ============================================================================
# PWA CONFIGURATION
# ============================================================================

# PWA Version (for cache management)
NEXT_PUBLIC_APP_VERSION=1.0.0

# Enable PWA features
NEXT_PUBLIC_ENABLE_PWA=true

# Enable background sync
NEXT_PUBLIC_ENABLE_BACKGROUND_SYNC=true

# Enable push notifications
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false

# Service Worker update check interval (milliseconds)
NEXT_PUBLIC_SW_UPDATE_CHECK_INTERVAL=30000

# ============================================================================
# PERFORMANCE & MONITORING
# ============================================================================

# Google Analytics (for usage tracking)
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Vercel Analytics (if deployed on Vercel)
VERCEL_ANALYTICS_ID=

# Error Tracking with Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Web Vitals endpoint for performance monitoring
NEXT_PUBLIC_VITALS_URL=/api/vitals

# Enable bundle analysis
ANALYZE=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable Google Drive integration
NEXT_PUBLIC_ENABLE_GOOGLE_DRIVE=true

# Enable server-side processing (future feature)
NEXT_PUBLIC_ENABLE_SERVER_PROCESSING=false

# Maximum file size in MB (10GB = 10240MB)
NEXT_PUBLIC_MAX_FILE_SIZE_MB=10240

# Enable offline mode
NEXT_PUBLIC_ENABLE_OFFLINE=true

# Enable install prompt
NEXT_PUBLIC_ENABLE_INSTALL_PROMPT=true

# Enable update notifications
NEXT_PUBLIC_ENABLE_UPDATE_NOTIFICATIONS=true

# ============================================================================
# CACHING & STORAGE
# ============================================================================

# Cache version (increment to force cache refresh)
NEXT_PUBLIC_CACHE_VERSION=v1.0.0

# Maximum cache size in MB
NEXT_PUBLIC_MAX_CACHE_SIZE=100

# IndexedDB quota in MB
NEXT_PUBLIC_INDEXEDDB_QUOTA=50

# ============================================================================
# SECURITY
# ============================================================================

# NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_for_production

# Content Security Policy nonce
CSP_NONCE=your_random_nonce_value

# Rate limiting
RATE_LIMIT_RPM=100
RATE_LIMIT_MAX_REQUESTS=1000

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Development mode
NODE_ENV=production

# Debug mode
DEBUG=false

# Enable service worker in development
NEXT_PUBLIC_SW_DEV=false

# Skip environment validation
SKIP_ENV_VALIDATION=false

# ============================================================================
# THIRD-PARTY INTEGRATIONS
# ============================================================================

# PostHog (for analytics)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Stripe (for future premium features)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=

# Supabase (for future database features)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Vercel configuration
VERCEL=1
VERCEL_ENV=production
VERCEL_URL=your-app.vercel.app
VERCEL_REGION=iad1

# Build optimization
NEXT_TELEMETRY_DISABLED=1
SKIP_PREFLIGHT_CHECK=true

# Image optimization
NEXT_IMAGES_OPTIMIZE=true
NEXT_IMAGES_FORMATS=image/avif,image/webp