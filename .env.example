# Environment Variables for Smart ZIP Splitter
# Copy this file to .env.local and fill in the values

# ============================================================================
# GOOGLE DRIVE INTEGRATION (REQUIRED for files > 100MB)
# ============================================================================

# Google API Configuration
# Get these from Google Cloud Console (https://console.cloud.google.com/)
# 1. Create a new project or select existing
# 2. Enable Google Drive API and Google Sheets API
# 3. Create OAuth 2.0 credentials (Web application)
# 4. Add authorized redirect URIs:
#    - http://localhost:3000/api/auth/google/callback (development)
#    - https://yourdomain.com/api/auth/google/callback (production)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com

# OAuth Configuration
# The base URL where your app is hosted (for OAuth redirects)
NEXTAUTH_URL=http://localhost:3000

# ============================================================================
# OPTIONAL INTEGRATIONS
# ============================================================================

# Google Analytics (for usage tracking)
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Vercel Analytics (if deployed on Vercel)
VERCEL_ANALYTICS_ID=

# Error Tracking with Sentry
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable Google Drive integration
NEXT_PUBLIC_ENABLE_GOOGLE_DRIVE=true

# Enable server-side processing (future feature)
NEXT_PUBLIC_ENABLE_SERVER_PROCESSING=false

# Maximum file size in MB (10GB = 10240MB)
NEXT_PUBLIC_MAX_FILE_SIZE_MB=10240

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_for_development