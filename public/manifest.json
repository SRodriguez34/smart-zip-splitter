    {
      "src": "/screenshots/mobile-upload.png",
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "File upload interface on mobile"
    }
  ],
  "shortcuts": [
    {
      "name": "Split Files",
      "short_name": "Split",
      "description": "Quick access to file splitting",
      "url": "/?action=split",
      "icons": [
        {
          "src": "/icons/shortcut-split.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Google Drive",
      "short_name": "Drive",
      "description": "Access Google Drive integration",
      "url": "/?action=drive",
      "icons": [
        {
          "src": "/icons/shortcut-drive.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Settings",
      "short_name": "Settings",
      "description": "Configure application settings",
      "url": "/?action=settings",
      "icons": [
        {
          "src": "/icons/shortcut-settings.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": [
            ".zip",
            "application/zip",
            "application/x-zip-compressed"
          ]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/zip": [".zip"],
        "application/x-zip-compressed": [".zip"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+smartzip",
      "url": "/?protocol=%s"
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": [
    "standalone",
    "minimal-ui",
    "browser"
  ]
}
